<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/transportActivityAddTextView"
            android:layout_width="316dp"
            android:layout_height="51dp"
            android:layout_margin="40dp"
            android:layout_marginTop="15dp"
            android:text="Activity Name"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/transportationActivityAddButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/transportActivityAddTextView"
            app:layout_constraintEnd_toEndOf="@+id/transportActivityAddTextView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/transportActivityAddTextView"
            app:layout_constraintTop_toTopOf="@+id/transportActivityAddTextView"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/foodActivityAddTextView"
            android:layout_width="316dp"
            android:layout_height="51dp"
            android:layout_margin="40dp"
            android:layout_marginTop="15dp"
            android:text="Activity Name"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transportActivityAddTextView" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="4dp"
            android:text="Add"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/foodActivityAddTextView"
            app:layout_constraintEnd_toEndOf="@+id/foodActivityAddTextView"
            app:layout_constraintTop_toTopOf="@+id/foodActivityAddTextView"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/shoppingActivityAddTextView"
            android:layout_width="316dp"
            android:layout_height="51dp"
            android:layout_margin="40dp"
            android:layout_marginTop="15dp"
            android:text="Activity Name"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foodActivityAddTextView" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="Add"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/shoppingActivityAddTextView"
            app:layout_constraintEnd_toEndOf="@+id/shoppingActivityAddTextView"
            app:layout_constraintTop_toTopOf="@+id/shoppingActivityAddTextView"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>
